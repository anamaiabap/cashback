{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Badges",
  "type": "object",
  "properties": {
    "content": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "operator": {
      "type": "string"
    },
    "type": {
      "type": "string"
    },
    "simpleStatements": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "object": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string"
              },
              "name": {
                "type": "string"
              },
              "value": {
                "type": "string"
              }
            },
            "required": []
          },
          "subject": {
            "type": "string"
          },
          "verb": {
            "type": "string"
          }
        },
        "required": ["object", "subject", "verb"]
      }
    }
  },
  "required": ["content", "name", "operator", "type", "simpleStatements"],
  "v-indexed": ["content", "name", "operator", "type", "simpleStatements"]
}
